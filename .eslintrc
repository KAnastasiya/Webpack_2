{
  "extends": [
    "airbnb-base",
    "prettier"
  ],

  "parser": "babel-eslint",

  "globals": {
    "NODE_ENV": true
  },

  "plugins": [
    "prettier"
  ],

  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": true
  },

  "rules": {
    "prettier/prettier": ["error", {
      "printWidth": 120,
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": true,
      "jsxBracketSameLine": true,
      "parser": "babylon",
      "semi": true
    }],
    "import/prefer-default-export": 0,
    "no-nested-ternary": 0,
    "one-var-declaration-per-line": [2, "initializations"],
    "one-var": [2, { initialized: "never" }],
    "max-len": [0, 120],
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-confusing-arrow": 0,
    "consistent-return": 0,
    "func-names": [0, "as-needed"],
    "global-require": 0,
    "no-return-assign": 0,
    "curly": ["error", "all"]
  }
}
